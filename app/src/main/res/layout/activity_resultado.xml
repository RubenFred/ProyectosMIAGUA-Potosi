<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="Nombre del Proyecto"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/nombreProyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="proyecto"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imagenTipoProy"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_iconoagua"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monto fps (Bs):"
                    />
                <TextView
                    android:id="@+id/res_fpsTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraparte (Bs):"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/res_contraparteTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:background="#ff9703"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Costo Total (Bs):"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/res_totalTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>